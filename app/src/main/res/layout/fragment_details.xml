<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewSlika"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvNaziv"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvOpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvOpis"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvKategorija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvKategorija"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvKubikaza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvKubikaza"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvCena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tvCena"
            android:gravity="center"/>
    </LinearLayout>
</FrameLayout>